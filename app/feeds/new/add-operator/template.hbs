<div class="fullvw-wrapper">
	{{add-feed-tabs header-text="ADD A TRANSIT FEED" upload-tab-class="tab" add-operator-tab-class="tab-current" license-tab-class="tab" submit-tab-class="tab" submitted=false}}
</div>

<div class="container">
	<div class="add-operator-info">
		<p>
			Transitland checked your feed and found {{model.operators.length}} {{#if singleOperator}}operator{{else}}operators{{/if}}. Review the information below and provide additional details about each operator and location it serves. All fields are required unless otherwise indicated.
		</p>
	</div>
	<div>
		{{#each operator in model.operators}}
			{{operator-form operator=operator singleOperator=singleOperator minimumOperator=minimumOperator}}
			<br>
		{{/each}}
	</div>
	<br>
	<!-- if one or more operator is selected to include in feed -->


	{{#unless minimumOperator}}
			<div class="row has-error">
				<div class="col-sm-12">
					<div class="error text-center">
						Please include at least one operator
					</div>
				</div>
			</div>
	{{/unless}}

	<div class="direction-btn-wrapper row">
		<div class="col-sm-12">
			{{#if minimumOperator}}
				{{#link-to 'feeds.new.license' class="btn btn-default pull-right"}}
					Next >
				{{/link-to}}
			{{else}}
				{{#link-to 'feeds.new.license' class="btn btn-default pull-right disabled"}}
					Next >
				{{/link-to}}
			{{/if}}
		</div>
	</div>
<!-- display button asking to include at least one operator -->
</div>